<% content_for(:title) do%>
	Files for Viaplay Priorities: MuVi2 Database
<% end %>

<h1>On Demand Files</h1>

<table>
  <tr>
    <th>Filename</th>
    <th>Uploaded</th>
  </tr>

<% @on_demand_files.each do |on_demand_file| %>
  <tr>
    <td><%=h on_demand_file.filename %></td>
    <td><%=h on_demand_file.uploaded.to_s(:broadcast_datetime)%></td>
    <td><%= link_to 'Show', on_demand_file %></td>
    <td><%= link_to 'Edit', edit_on_demand_file_path(on_demand_file) %></td>
    <td><%= link_to 'Destroy', on_demand_file, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New On Demand File', new_on_demand_file_path %>