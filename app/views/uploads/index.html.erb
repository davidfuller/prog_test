	<% form_tag ({:action => :web_upload_press_file}) do%>
		<p>
			<%= calendar_date_select_tag :press_date, params[:press_date], :month_year => :label %>
		</p>
		<%= select_tag :channel, options_for_select(@channels, params[:channel])  %><br/>
		<%= submit_tag("Process") %>
	<% end %>
</fieldset>
	
