

<fieldset>
	<legend>Schedule file</legend>
	<% form_tag({:action => :upload_schedule}, :multipart => true) do %>
		<p>Select the schedule file to process:</p>
  	<%= file_field_tag 'schedule', {:size => 60} %><br/>
		<%= submit_tag("Process") %>
	<% end %>
</fieldset>
<br/>
