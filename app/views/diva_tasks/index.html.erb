<h1>Listing diva_tasks</h1>

<table>
  <tr>
    <th>System</th>
    <th>Task type</th>
    <th>Name</th>
    <th>Task index</th>
    <th>Completed</th>
  </tr>

<% @diva_tasks.each do |diva_task| %>
  <tr>
    <td><%=h diva_task.system_id %></td>
    <td><%=h diva_task.task_type %></td>
    <td><%=h diva_task.name %></td>
    <td><%=h diva_task.task_index %></td>
    <td><%=h diva_task.completed %></td>
    <td><%= link_to 'Show', diva_task %></td>
    <td><%= link_to 'Edit', edit_diva_task_path(diva_task) %></td>
    <td><%= link_to 'Destroy', diva_task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

