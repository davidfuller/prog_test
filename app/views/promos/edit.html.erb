<h1>Editing Promo Media</h1>

<% form_for(@promo) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'entry', :locals	=> {:f => f} 	%>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @promo %> |
<%= link_to 'Back', promos_path %>

<% if params[:search].nil? %>
	<div id ='search_title' , style = "display: none;" >
<% else %>
	<div id ='search_title'>
<% end %>

<h1>Programme Titles</h1>
<% form_tag edit_promo_path, :method =>'get' do %>
<p>
	<%= text_field_tag :search, params[:search]||@promo.first_english_title, :size => 45 %>
  <%= select_tag :search_type, options_for_select(@search_types, params[:search_type])%>
	<%= submit_tag "Search", :name => nil %>
</p>			
<% end %>
<%= render :partial => 'shared/titles', :locals => {:include_add => true } %>
</div>
