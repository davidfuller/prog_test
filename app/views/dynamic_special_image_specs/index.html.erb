<% content_for(:title) do%>
	Dynamic Special Field Specifications: MuVi2 Database
<% end %>
<h1>Dynamic Special Field Specifications</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Width</th>
    <th>Height</th>
    <th>Resizable</th>
    <th>Media Folder</th>
    <th>Display Folder</th>
    <th>Upload Folder</th>
    <th>Logo</th>
    <th>Promo<th>
  </tr>

<% @dynamic_special_image_specs.each do |dynamic_special_image_spec| %>
  <tr>
    <td><%=h dynamic_special_image_spec.name %></td>
    <td><%=h dynamic_special_image_spec.image_text %></td>
    <td><%=h dynamic_special_image_spec.width %></td>
    <td><%=h dynamic_special_image_spec.height %></td>
    <td><%=h dynamic_special_image_spec.resizable_text %></td>
    <td><%=h dynamic_special_image_spec.media_folder.name if dynamic_special_image_spec.media_folder %></td>
    <td><%=h dynamic_special_image_spec.display_folder %></td>
    <td><%=h dynamic_special_image_spec.upload_folder %></td>
    <td><%=h dynamic_special_image_spec.logo_text %></td>
    <td><%=h dynamic_special_image_spec.promo_text %></td>
    <td><%= link_to 'Show', dynamic_special_image_spec %></td>
    <td><%= link_to 'Edit', edit_dynamic_special_image_spec_path(dynamic_special_image_spec) %></td>
    <td><%= link_to 'Destroy', dynamic_special_image_spec, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Field Spec', new_dynamic_special_image_spec_path %>