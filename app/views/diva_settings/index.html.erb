<h1>Diva Settings</h1>

<table>
  <tr>
    <th width = 15%>Name</th>
    <th>Value</th>
    <th>Text (Long) Value</th>
  </tr>

<% @diva_settings.each do |diva_setting| %>
  <tr>
    <td><%=h diva_setting.name %></td>
    <td><%=h diva_setting.value %></td>
    <td><%=h diva_setting.text_value%></td>
    <td><%= link_to 'Show', diva_setting %></td>
    <td><%= link_to 'Edit', edit_diva_setting_path(diva_setting) %></td>
    <td><%= link_to 'Destroy', diva_setting, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Diva Setting', new_diva_setting_path %>